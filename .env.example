# Studious Pancake - Environment Configuration
# Copy this file to .env and modify the values as needed

# ===========================================
# AUTH SERVICE CONFIGURATION
# ===========================================

# Database Configuration
DATABASE_URL=host=localhost user=postgres password=secret dbname=mydb port=5432 sslmode=disable

# Auth Service Configuration
AUTH_SERVICE_PORT=8080
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENVIRONMENT=development

# Redis Configuration
REDIS_URL=localhost:6379

# ===========================================
# DOCKER COMPOSE CONFIGURATION
# ===========================================

# PostgreSQL Configuration
POSTGRES_DB=mydb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secret
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Gin Mode (debug, release, test)
GIN_MODE=debug

# Log Level (debug, info, warn, error)
LOG_LEVEL=debug

# Enable/Disable Features
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true

# ===========================================
# EMAIL CONFIGURATION (Future Use)
# ===========================================

# Email Service Provider (sendgrid, aws-ses, smtp)
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@studious-pancake.com

# SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# SendGrid Configuration
SENDGRID_API_KEY=

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Token Expiration
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d
PASSWORD_RESET_TOKEN_EXPIRY=1h
EMAIL_VERIFICATION_TOKEN_EXPIRY=24h

# Password Requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_PASSWORD_COMPLEXITY=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
LOGIN_RATE_LIMIT=5
LOGIN_RATE_WINDOW=15m